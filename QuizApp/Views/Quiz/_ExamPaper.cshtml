@model List<QuizApp.Models.QAndA>

<div class="col-12">
    <input type="hidden" value="@Model.Count" id="totalQuestions"/>
    @{ for (int i = 0; i < Model.Count; i++)
        {
            <div class="row pt-3" id="question@(i)" data-qid="@Model[i].Id">
                <div class="col-12">
                    @(i+1). @Model[i].Question
                </div>
            </div>
            <div class="row pt-2">
                <div class="form-check col-3">
                    <input class="form-check-input" name="questions@(i)" type="radio" id="questions@(i)Option1" value="1">
                    <label class="form-check-label" for="questions@(i)Option1">
                        @Model[i].Option1
                    </label>
                </div>
                <div class="form-check col-3">
                    <input class="form-check-input" name="questions@(i)" type="radio" id="questions@(i)Option2" value="2">
                    <label class="form-check-label" for="questions@(i)Option2">
                        @Model[i].Option2
                    </label>
                </div>
                <div class="form-check col-3">
                    <input class="form-check-input" name="questions@(i)" type="radio" id="questions@(i)Option3" value="3">
                    <label class="form-check-label" for="questions@(i)Option3">
                        @Model[i].Option3
                    </label>
                </div>
                <div class="form-check col-3">
                    <input class="form-check-input" name="questions@(i)" type="radio" id="questions@(i)Option4" value="4">
                    <label class="form-check-label" for="questions@(i)Option4">
                        @Model[i].Option4
                    </label>
                </div>
            </div>
        }
    }
</div>

<div class="col-12 mt-4 text-center ">
    <button type="button" class="btn btn-primary" id="submitExamPaper" style="width: 25%;">Submit</button>
</div>