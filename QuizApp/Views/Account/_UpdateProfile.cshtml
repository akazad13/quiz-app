@model QuizApp.Models.User

<div class="card-body">
    <div class="row">
        <div class="col-md-12">
            <h4>Update Profile</h4>
            <hr>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <form id="updateProfileForm">
                <div class="form-group row">
                    <label for="firstName" class="col-4 col-form-label">First Name</label>
                    <div class="col-8">
                        <input id="firstName" name="name" placeholder="First Name" class="form-control here" type="text" value="@Model.FirstName" maxlength="50">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="lastName" class="col-4 col-form-label">Last Name</label>
                    <div class="col-8">
                        <input id="lastName" name="lastname" placeholder="Last Name" class="form-control here" type="text" value="@Model.LastName" maxlength="50">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="email" class="col-4 col-form-label">Email*</label>
                    <div class="col-8">
                        <input id="email" name="email" placeholder="Email" class="form-control here" required="required" type="text" value="@Model.Email">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="offset-4 col-8">
                        <button id="btnUpdateProfileForm" name="submit" type="submit" class="btn btn-primary">Update My Profile</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

</div>